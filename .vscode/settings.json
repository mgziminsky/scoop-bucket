{
    "json.schemas": [
        {
            "url": "https://raw.githubusercontent.com/Ash258/Scoop-Core/NEW/schema.json",
            "fileMatch": [
                ".vscode/Template.jsonc",
                "bucket/*.json",
            ],
        },
    ],
    "powershell.codeFormatting.preset": "OTBS",
    "yaml.format.bracketSpacing": true,
    "yaml.format.enable": true,
    "yaml.format.singleQuote": true,
    "yaml.validate": true,
    "yaml.schemas": {
        "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/appveyor.json": "appveyor.yml",
        "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/github-workflow.json": ".github/workflows/*.yml",
        "https://raw.githubusercontent.com/Ash258/Scoop-Core/NEW/schema.json": "bucket/*.yml",
    },
}
