    "uninstaller": {
        "script": [
            "ensure \"$persist_dir\" | Out-Null",
            "Copy-Item \"$dir\\Sandboxie-Plus.ini\" \"$persist_dir\" -ErrorAction SilentlyContinue -Force"
        ]
    },
    "persist": [
