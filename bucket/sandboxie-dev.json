        "jsonpath": "$[0].assets[?(@.name =~ /Plus-x64/i)].browser_download_url",
        "regex": "download/(?<version>.+?)/.*v(?<asset>.+?)\\.exe$"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/$version/Sandboxie-Plus-x64-v$matchAsset.exe"
