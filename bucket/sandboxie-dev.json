        "jsonpath": "$[0].assets[?(@.name =~ /Plus-x64/i)].browser_download_url",
        "regex": "download/(?<version>.+?)/.*v(?<asset>.+?)\\.exe$"
    },
    "autoupdate": {
        "architecture": {
