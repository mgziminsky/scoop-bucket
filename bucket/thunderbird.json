{
    "version": "115.2.2",
    "description": "A free email application that's easy to set up and customize.",
    "homepage": "https://www.thunderbird.net",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/115.2.2/win64/en-US/Thunderbird%20Setup%20115.2.2.exe#/dl.7z",
            "hash": "sha512:a7bbad9aff5c7d41694716e624b8c2fb91dc20de1ea577bf62f9726ea217fb030a9f8e9a4a44e0a84923afa14087420c601f14e17d30d5ed21e8275f45a0a83a"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/115.2.2/win32/en-US/Thunderbird%20Setup%20115.2.2.exe#/dl.7z",
            "hash": "sha512:0233a9832b13d14f62e8649731b207ba297f537c8a4183ba88ac38873637f6f694e5580af9be982ec560edec9798dbe5c083eeb2fde0b0bd0e4805f14f3685a2"
        }
    },
    "extract_dir": "core",
    "bin": [
        [
            "thunderbird.exe",
            "thunderbird",
            "-profile \"$dir\\profile\""
        ]
    ],
    "shortcuts": [
        [
            "thunderbird.exe",
            "Thunderbird",
            "-profile \"$dir\\profile\""
        ]
    ],
    "post_install": [
        "$app = \"$dir\\thunderbird.exe\".Replace('\\', '\\\\')",
        "$shim = \"$(shimdir)\\thunderbird.exe\".Replace('\\', '\\\\')",
        "$scripts = join-path $bucketsdir $($ResolvedObject.Bucket) | join-path -ChildPath scripts/thunderbird",
        "'install-associations', 'uninstall-associations' | ForEach-Object {",
        "  if (Test-Path \"$scripts\\$_.reg\") {",
        "    $content = Get-Content \"$scripts\\$_.reg\"",
        "    $content = $content.Replace('$app', $app)",
        "    $content = $content.Replace('$dir', $dir)",
        "    $content = $content.Replace('$shim', $shim)",
        "    if ($global) {",
        "      $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "    }",
        "    $content | Set-Content -Path \"$dir\\$_.reg\"",
        "  }",
        "}",
        "REG IMPORT \"$dir\\install-associations.reg\" *>&1 | Out-Null"
    ],
    "pre_uninstall": "REG IMPORT \"$dir\\uninstall-associations.reg\" *>&1 | Out-Null",
    "persist": "profile",
    "checkver": {
        "url": "https://www.thunderbird.net/thunderbird/all/",
        "regex": "thunderbird/([\\d.]+)/"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/win64/en-US/Thunderbird%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/win32/en-US/Thunderbird%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            }
        }
    }
}
